<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/apk_Ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:singleLine="false"
        android:text="TextView"></TextView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
       <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="false"
            android:text="TextView"></TextView>

        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:onClick="SettingimageClick"
            android:src="@android:drawable/star_big_on"></ImageView>

    </LinearLayout>
    <ImageView
        android:id="@+id/test_image"
        android:layout_width="256dp"
        android:layout_height="360dp"
        android:layout_gravity="center_horizontal"

        android:src="@android:color/darker_gray"></ImageView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/connectB"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:text="Connect" />

        <Button
            android:layout_weight="1"
            android:id="@+id/discB"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:text="DisC" />

        <Button
            android:layout_weight="1"
            android:id="@+id/enrollB"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:text="Enroll" />
        <Button
            android:layout_weight="1"
            android:id="@+id/IdentifyB"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:text="Identify" />





    </LinearLayout>
</LinearLayout>